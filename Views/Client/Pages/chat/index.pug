extends ../../layouts/default.pug
include ../../mixins/box-head.pug


block main 
    .container.my-3.chat

        include ../../partials/list-user-button.pug

        .row 
            .col-12 
                +box-head(titlePage)

        .row 
            .col-12 
                .chat(my-id=user.id)
                    .inner-body 
                        each chat in chats
                            if (chat.infoUser.id != user.id)
                                .inner-incoming
                                    .inner-name #{chat.infoUser.fullName}
                                    .inner-content
                                        | #{chat.content} 
                                    if (chat.images)
                                        .inner-images
                                            each image in chat.images 
                                                img(src=image)
                            else
                                .inner-outgoing
                                    if (chat.content) 
                                        .inner-content
                                            | #{chat.content} 
                                    if (chat.images )
                                        .inner-images
                                            each image in chat.images 
                                                img(src=image)
                        .inner-list-typing

                    .inner-preview-images
                        .custom-file-container(data-upload-id="upload-image")

                    .inner-foot 
                        form.inner-form(
                            action=``
                        )
                            input(
                                type='text'
                                placeholder='Nhập nội dung...'
                                name='content'
                            )
                            label(for='file-upload-with-preview-upload-image').btn.btn-light.mx-2.mb-0
                                i.fa-regular.fa-image
                            span.button-icon.btn.btn-light.mx-2 
                                i.fa-regular.fa-face-smile
                            button 
                                i.fa-solid.fa-paper-plane

    .tooltip(role='tooltip')
        emoji-picker.light

    block script 
        script(type='module' src="/js/chat.js") 


