extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
    .container.my-3.chat
        .row 
            .col-12 
                +box-head(titlePage)

        .row 
            .col-12 
                .chat(my-id=user.id)
                    .inner-body 
                        each chat in chats
                            if (chat.infoUser.id != user.id)
                                .inner-incoming
                                    .inner-name #{chat.infoUser.fullName}
                                    .inner-content
                                        | #{chat.content} 
                            else
                                .inner-outgoing 
                                    .inner-content
                                        | #{chat.content} 
                    .inner-foot 
                        form.inner-form(
                            action=``
                        )
                            input(
                                type='text'
                                placeholder='Nhập nội dung...'
                                name='content'
                            )
                            span.button-icon.btn.btn-light.mx-2 
                                i.fa-regular.fa-face-smile
                            button 
                                i.fa-solid.fa-paper-plane

    .tooltip(role='tooltip')
        emoji-picker.light


