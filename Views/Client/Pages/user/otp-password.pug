extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-error(4000)

    .container.my-5
        .row.justify-content-center
            .col-8
                h1.text-center #{titlePage}
                form(
                    action='/user/password/otp'
                    method='POST'
                ) 
                    .form-group
                        label(for='email') Email
                        input.form-control(
                            type='email'
                            id='email'
                            name='email'
                            value=email
                            readonly
                    )
                    .form-group.mb-3
                        label(for='otp') mã OTP
                        input.form-control(
                            type='Number'
                            id='otp'
                            name='otp'
                            required
                        )
                    .form-group 
                        button.btn.btn-primary.btn-block(
                            type='submit'
                        ) Xác nhận
