extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-error(4000)

    .container.my-5
        .row.justify-content-center
            .col-8
                h1.text-center #{titlePage}
                form(
                    action='/user/password/forgot'
                    method='POST'
                ) 
                    .form-group.mb-3
                        label(for='email') Email
                        input.form-control(
                            type='email'
                            id='email'
                            name='email'
                            required
                        )
                    .form-group 
                        button.btn.btn-primary.btn-block(
                            type='submit'
                        ) Gửi mail xác nhận 
