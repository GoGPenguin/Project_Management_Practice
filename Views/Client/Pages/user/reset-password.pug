extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-error(4000)

    .container.my-5
        .row.justify-content-center
            .col-8
                h1.text-center #{titlePage}
                form(
                    action='/user/password/reset'
                    method='POST'
                ) 
                    .form-group
                        label(for='password') Password
                        input.form-control(
                            type='password'
                            id='password'
                            name='password'
                            required
                    )
                    .form-group.mb-3
                        label(for='confirmPassword') Xác nhận mật khẩu
                        input.form-control(
                            type='password'
                            id='confirmPassword'
                            name='confirmPassword'
                            required
                        )
                    .form-group 
                        button.btn.btn-primary.btn-block(
                            type='submit'
                        ) Đổi mật khẩu
