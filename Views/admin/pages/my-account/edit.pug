extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    h1.mb-4 #{titlePage}

    +alert-success(3000)
    +alert-error(3000)

    form(
        action=`${prefixAdmin}/my-account/edit?_method=PATCH`
        method='POST'
        enctype='multipart/form-data'
    )
        .form-group 
            label(for='fullName') Họ tên *
            input.form-control(
                type='text'
                id='fullName'
                name='fullName'
                required
                value=user.fullName
            )
        .form-group 
            label(for='email') Email *
            input.form-control(
                type='text'
                id='email'
                name='email'
                required
                value=user.email
            )
        .form-group 
            label(for='password') Password *
            input.form-control(
                type='text'
                id='password'
                name='password'
            )
        .form-group 
            label(for='phone') Phone
            input.form-control(
                type='text'
                id='phone'
                name='phone'
                value=user.phone
            )
        div(
            class="form-group"
            upload-image
        )
            label(for="avatar") Ảnh
            input(
                type="file"
                class="form-control-file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input
            )
            img(
                src=user.avatar
                upload-image-preview
                class="image-preview"
            )
        .form-group 
            button.btn.btn-primary(
                type='submit'
            ) Cập nhật