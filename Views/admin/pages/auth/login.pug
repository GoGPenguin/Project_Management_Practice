extends ../../layouts/auth.pug
include ../../mixins/alert.pug

block main 
    +alert-error(3000)

    .container.my-5 
        .row.justify-content-center 
            .col-8 
                h1.text-center #{titlePage}
                form(
                    action=`${prefixAdmin}/auth/login`
                    method='POST'
                )
                    .mb-3
                        label(for='email') Email
                        input.form-control(
                            type='email'
                            id='email'
                            name='email'
                            required
                        )
                    .mb-3
                        label(for='password') Password
                        input.form-control(
                            type='password'
                            id='password'
                            name='password'
                            required
                        )
                    .mb-3
                        button.btn.btn-primary.btn-block(
                            type='submit'
                        ) Đăng nhập